@model List<BlogStore.EntityLayer.Entities.Category>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kategoriler";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="card-title fw-semibold mb-0">Kategori Yönetimi</h5>
                    <a href="/Category/CreateCategory" class="btn btn-primary">
                        <i class="ti ti-plus me-2"></i>Yeni Kategori
                    </a>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Kategori Adı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CategoryId</td>
                                        <td>
                                            <span class="badge bg-primary">@item.CategoryName</span>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-sm btn-outline-primary">
                                                    <i class="ti ti-edit"></i>
                                                </a>
                                                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-sm btn-outline-danger" 
                                                   onclick="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')">
                                                    <i class="ti ti-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">
                                        <i class="ti ti-category fs-2 mb-2"></i>
                                        <p>Henüz kategori bulunmuyor</p>
                                        <a href="/Category/CreateCategory" class="btn btn-primary btn-sm">
                                            <i class="ti ti-plus"></i> İlk Kategoriyi Oluştur
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
