@model List<BlogStore.EntityLayer.Entities.Article>

<div class="post-entry-footer">
    <ul>
        @if (Model != null && Model.Any())
        {
            @foreach (var article in Model)
            {
                <li>
                    <a href="">
                        @if (!string.IsNullOrEmpty(article.ImageUrl))
                        {
                            <img src="@article.ImageUrl" alt="@article.Title" class="me-4 rounded" style="width: 60px; height: 60px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="/blogy-1.0.0/images/img_1_sq.jpg" alt="@article.Title" class="me-4 rounded" style="width: 60px; height: 60px; object-fit: cover;">
                        }
                        <div class="text">
                            <h4>@(article.Title?.Length > 50 ? article.Title.Substring(0, 50) + "..." : article.Title)</h4>
                            <div class="post-meta">
                                <span class="mr-2">@article.CreatedDate.ToString("dd MMMM yyyy")</span>
                            </div>
                        </div>
                    </a>
                </li>
            }
        }
        else
        {
            <li>
                <a href="">
                    <img src="/blogy-1.0.0/images/img_1_sq.jpg" alt="Görsel" class="me-4 rounded" style="width: 60px; height: 60px; object-fit: cover;">
                    <div class="text">
                        <h4>Henüz makale bulunmuyor</h4>
                        <div class="post-meta">
                            <span class="mr-2">-</span>
                        </div>
                    </div>
                </a>
            </li>
        }
    </ul>
</div> 