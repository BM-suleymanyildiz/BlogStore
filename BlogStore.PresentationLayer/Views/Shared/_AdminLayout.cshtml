<!doctype html>
<html lang="tr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>@ViewData["Title"] - BlogStore Admin</title>
  <link rel="shortcut icon" type="image/png" href="~/flexy-bootstrap-lite-1.0.0/assets/images/logos/favicon.png" />
        <link rel="stylesheet" href="~/flexy-bootstrap-lite-1.0.0/assets/css/styles.min.css" />
   <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">

    

    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <!-- Sidebar scroll-->
      <div>
                 <div class="brand-logo d-flex align-items-center justify-content-between">
           <a href="/Admin" class="text-nowrap logo-img">
             <div class="custom-logo">
               <span class="yildiz">Yıldız</span><span class="s">S</span>
             </div>
           </a>
           <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
             <i class="ti ti-x fs-6"></i>
           </div>
         </div>
        <!-- Sidebar navigation-->
        <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
          <ul id="sidebarnav">
            <li class="sidebar-item">
              <a class="sidebar-link" href="/Default/Index" target="_blank" aria-expanded="false">
                <i class="ti ti-external-link"></i>
                <span class="hide-menu">Siteye Git</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" href="/Admin" aria-expanded="false">
                <i class="ti ti-atom"></i>
                <span class="hide-menu">Dashboard</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" href="/Admin/ArticleList" aria-expanded="false">
                <i class="ti ti-file-text"></i>
                <span class="hide-menu">Makalelerim</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" href="/Admin/CategoryList" aria-expanded="false">
                <i class="ti ti-category"></i>
                <span class="hide-menu">Kategorilerim</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" href="/Admin/CommentList" aria-expanded="false">
                <i class="ti ti-message-circle"></i>
                <span class="hide-menu">Yorumlarım</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" href="/Admin/Profile" aria-expanded="false">
                <i class="ti ti-user-circle"></i>
                <span class="hide-menu">Profilim</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" href="/Login/Logout" aria-expanded="false">
                <i class="ti ti-logout"></i>
                <span class="hide-menu">Çıkış Yap</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </aside>
    <!--  Sidebar End -->
    
    <!--  Main wrapper-->
    <div class="body-wrapper">
             <!--  Header Start -->
       <header class="app-header">
         <nav class="navbar navbar-expand-lg navbar-light">
           <ul class="navbar-nav">
             <li class="nav-item d-block d-xl-none">
               <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                 <i class="ti ti-menu-2"></i>
               </a>
             </li>
           </ul>
         </nav>
       </header>
      <!--  Header End -->
      
      <div class="container-fluid">
        <!--  Row 1 -->
        <div class="row">
          <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
              <div class="card-body p-4">
                @RenderBody()
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="~/flexy-bootstrap-lite-1.0.0/assets/js/app.min.js"></script>
  <script src="~/flexy-bootstrap-lite-1.0.0/assets/js/dashboard.js"></script>
  <script src="~/flexy-bootstrap-lite-1.0.0/assets/js/sidebarmenu.js"></script>
  <script src="~/js/site.js"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html> 