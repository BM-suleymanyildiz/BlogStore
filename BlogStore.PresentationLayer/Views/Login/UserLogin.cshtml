@model UserLoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Giriş Yap</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <p class="login-subtitle">Hesabınıza giriş yapın</p>
        </div>
        
        <form method="post" class="login-form">
            <div class="form-group">
                <label class="form-label">Kullanıcı Adınız</label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı giriniz" />
            </div>
            
                         <div class="form-group">
                 <label class="form-label">Şifreniz</label>
                 <input type="password" asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz" />
             </div>
            
            <button type="submit" class="login-btn">Giriş Yap</button>
        </form>
        
        <div class="login-actions">
            <p class="register-text">Hesabınız yoksa <a href="/Register/CreateUser" class="register-link">Kayıt Olun</a></p>
        </div>
    </div>
</div>
</body>
</html>