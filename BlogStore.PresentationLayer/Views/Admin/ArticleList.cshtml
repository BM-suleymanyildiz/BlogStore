@model List<BlogStore.EntityLayer.Entities.Article>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Makalelerim";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="card-title fw-semibold mb-0">Makalelerim</h5>
                    <a href="/Admin/ArticleCreate" class="btn btn-primary btn-sm">
                        <i class="ti ti-plus"></i> Yeni Makale
                    </a>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="ti ti-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="ti ti-alert-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Kategori</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.Title" class="rounded-circle me-3" width="40" height="40">
                                                }
                                                else
                                                {
                                                    <img src="~/flexy-bootstrap-lite-1.0.0/assets/images/profile/user-1.jpg" alt="" class="rounded-circle me-3" width="40" height="40">
                                                }
                                                <div>
                                                    <h6 class="fw-semibold mb-0">@item.Title</h6>
                                                    <small class="text-muted">@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.Category != null)
                                            {
                                                <span class="badge bg-primary">@item.Category.CategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Kategori Yok (ID: @item.CategoryId)</span>
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        <td><span class="badge bg-success">Yayında</span></td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="/Admin/ArticleEdit/@item.ArticleId" class="btn btn-sm btn-outline-primary">
                                                    <i class="ti ti-edit"></i> Düzenle
                                                </a>
                                                <a href="/Admin/ArticleDelete/@item.ArticleId" 
                                                   class="btn btn-sm btn-outline-danger"
                                                   onclick="return confirm('Bu makaleyi silmek istediğinizden emin misiniz?')">
                                                    <i class="ti ti-trash"></i> Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        <i class="ti ti-file-text fs-2 mb-2"></i>
                                        <p>Henüz makale bulunmuyor</p>
                                        <a href="/Admin/ArticleCreate" class="btn btn-primary btn-sm">
                                            <i class="ti ti-plus"></i> İlk Makaleyi Oluştur
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 