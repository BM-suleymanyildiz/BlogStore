@model BlogStore.EntityLayer.Entities.Category
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Yeni Kategori";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="card-title fw-semibold mb-0">Yeni Kategori Oluştur</h5>
                    <a href="/Admin/CategoryList" class="btn btn-outline-primary btn-sm">
                        <i class="ti ti-arrow-left"></i> Kategorilere Dön
                    </a>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="ti ti-alert-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="ti ti-alert-circle me-2"></i>
                        <strong>Form Hataları:</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="CategoryCreate" method="post">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
                                <input asp-for="CategoryName" class="form-control" placeholder="Kategori adını giriniz..." required>
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>

                            
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Bilgiler</h6>
                                                                         <ul class="list-unstyled mb-0">
                                         <li><i class="ti ti-info-circle me-2"></i>Kategori adı benzersiz olmalıdır</li>
                                         <li><i class="ti ti-info-circle me-2"></i>Kısa ve açık isimler kullanın</li>
                                         <li><i class="ti ti-info-circle me-2"></i>Oluşturulduktan sonra düzenlenebilir</li>
                                     </ul>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="ti ti-plus me-2"></i>Kategoriyi Oluştur
                                </button>
                                <a href="/Admin/CategoryList" class="btn btn-outline-secondary">
                                    <i class="ti ti-x me-2"></i>İptal
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation için basit JavaScript
        document.querySelector('form').addEventListener('submit', function(e) {
            var categoryName = document.getElementById('CategoryName').value.trim();

            if (!categoryName) {
                alert('Lütfen kategori adını giriniz.');
                e.preventDefault();
                return false;
            }

            if (categoryName.length > 100) {
                alert('Kategori adı en fazla 100 karakter olabilir.');
                e.preventDefault();
                return false;
            }
        });

        // Debug için form submit olayını izle
        console.log('Form submit event listener eklendi');
    </script>
} 