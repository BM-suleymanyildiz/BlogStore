@model List<BlogStore.EntityLayer.Entities.Article>
@using BlogStore.PresentationLayer.Models

@{
    ViewData["Title"] = "MyArticleList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<h1>Makale Listeniz</h1>

<table class="table table-bordered">
    <tr>
        <th>Makale Başlığı</th>
        <th>Sitede Gör</th>
    </tr>

    @foreach(var item in Model)
    {
        var encodedId = IdEncoder.EncodeId(item.ArticleId);
        <tr>
            <td>@item.Title</td>
            <td><a href="/Article/ArticleDetail/@encodedId/" class="btn btn-primary">Sitede Gör</a></td>
        </tr>
    }


</table>
