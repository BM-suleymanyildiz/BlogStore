@model IEnumerable<BlogStore.EntityLayer.Entities.Article>
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title fw-semibold">Makaleler</h5>
                    <a href="/Admin/Article/Create" class="btn btn-primary">
                        <i class="ti ti-plus"></i> Yeni Makale
                    </a>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Kategori</th>
                                <th>Yazar</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var article in Model)
                            {
                                <tr>
                                    <td>@article.ArticleId</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(article.ImageUrl))
                                            {
                                                <img src="@article.ImageUrl" alt="@article.Title" class="rounded me-3" width="50" height="50">
                                            }
                                            <div>
                                                <h6 class="fw-semibold mb-0">@article.Title</h6>
                                                <small class="text-muted">@(article.Description?.Length > 100 ? article.Description.Substring(0, 100) + "..." : article.Description)</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (article.Category != null)
                                        {
                                            <span class="badge bg-primary">@article.Category.CategoryName</span>
                                        }
                                    </td>
                                    <td>
                                        @if (article.AppUser != null)
                                        {
                                            <span>@article.AppUser.UserName</span>
                                        }
                                    </td>
                                    <td>@article.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-success">Aktif</span>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="/Admin/Article/Edit/@article.ArticleId" class="btn btn-sm btn-outline-primary">
                                                <i class="ti ti-edit"></i>
                                            </a>
                                            <a href="/Article/ArticleDetail/@article.ArticleId" class="btn btn-sm btn-outline-info" target="_blank">
                                                <i class="ti ti-eye"></i>
                                            </a>
                                            <a href="/Admin/Article/Delete/@article.ArticleId" class="btn btn-sm btn-outline-danger" 
                                               onclick="return confirm('Bu makaleyi silmek istediğinizden emin misiniz?')">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 